{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["esnext"],
    "outDir": "dist",
    "rootDir": ".",
    "noImplicitAny": true,
    "types": ["node", "jest"],
    "checkJs": false
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
